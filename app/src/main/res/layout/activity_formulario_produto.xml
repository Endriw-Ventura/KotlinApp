<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context=".FormularioProdutoActivity"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/et_nome_item"
            android:hint="Nome do Produto"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_descricao_item"
            android:hint="Descrição do Produto"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/et_nome_item"
            app:layout_constraintStart_toStartOf="@id/et_nome_item"
            app:layout_constraintTop_toBottomOf="@id/et_nome_item" />

        <EditText
            android:id="@+id/et_valor_item"
            android:hint="Valor do Produto"
            android:inputType="numberDecimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/et_descricao_item"
            app:layout_constraintStart_toStartOf="@id/et_descricao_item"
            app:layout_constraintTop_toBottomOf="@id/et_descricao_item" />

        <Button
            android:id="@+id/btn_salvar"
            android:text="Salvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/et_valor_item"
            app:layout_constraintStart_toStartOf="@id/et_valor_item"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
